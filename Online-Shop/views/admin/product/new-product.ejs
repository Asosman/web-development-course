<%-include('../../shared/includes/head',{pageTitle :'admin-products'}) %>
</head>

<body>
<%-include('../../shared/includes/header') %>
<main>
    <h1>Create New Product</h1>

    <form action="" method="">
        <p>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" required>
        </p>
        <p>
            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="image/jpg,image/png" required>
        </p>
        <p>
            <label for="summary">Summary</label>
            <input type="text" id="summary" name="summary" maxlength="250" required>
        </p>
        <p>
            <label for="price">Price</label>
            <input type="number" min="0.01" step="0.01" required>
        </p>
        <p>
            <label for="description">Description</label>
            <textarea name="description" id="description" cols="30" rows="10"></textarea>
        </p>
    </form>
    
   
</main>
<%-include('../../shared/includes/footer')  %></body>